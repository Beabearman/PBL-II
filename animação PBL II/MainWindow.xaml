<Window x:Class="PBL_II_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Simulação de Travessia" Height="450" Width="800">
    <Grid>
        <!-- Entradas de Dados -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <TextBlock Text="Largura do Rio (m)" />
            <TextBox Name="txtLargura" Width="200" Margin="5" />

            <TextBlock Text="Velocidade do Motor (m/s)" />
            <TextBox Name="txtVelocidadeMotor" Width="200" Margin="5" />

            <TextBlock Text="Velocidade da Correnteza (m/s)" />
            <TextBox Name="txtVelocidadeCorrenteza" Width="200" Margin="5" />

            <TextBlock Text="Ângulo (graus)" />
            <TextBox Name="txtAngulo" Width="200" Margin="5" />

            <Button Content="Calcular" Width="200" Margin="5" Click="Calcular_Click" />
        </StackPanel>

        <!-- Gráfico -->
        <oxy:PlotView Name="plotView" Margin="10,221,10,10" />
    </Grid>
</Window>
